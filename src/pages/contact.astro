---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead
			title="Contacto - Voltiak"
			description="Contacta con Voltiak para solicitar cotizaciones y más información"
		/>
	</head>
	<body>
		<Header />
		<main class="min-h-screen bg-[#05192d] pt-44 md:pt-60">
			<div class="max-w-7xl mx-auto px-4 md:px-8">
				<div class="grid md:grid-cols-2 gap-12 md:gap-16 items-start">
					<!-- Columna izquierda - Información -->
					<div>
						<h1
							class="text-5xl md:text-7xl font-bold text-white mb-8 md:mb-12 font-family-HelveticaNeue"
						>
							Contacto
						</h1>
						<h2
							class="text-2xl md:text-3xl font-semibold text-white mb-6 font-family-HelveticaNeue"
						>
							¿Necesitas una cotización?
						</h2>
						<p
							class="text-base md:text-lg text-white/90 leading-relaxed max-w-lg font-family-HelveticaNeue"
						>
							Llena el siguiente formulario para solicitarla, especifica la información
							del transformador que necesitas para poder atenderte de la mejor manera.
						</p>
					</div>

					<!-- Columna derecha - Formulario -->
					<div class="w-full">
						<form
							id="contact-form"
							class="space-y-6"
							method="POST"
							action="#"
						>
							<!-- Campo Nombre completo -->
							<div>
								<label
									for="nombre"
									class="block text-white text-sm font-medium mb-2 font-family-HelveticaNeue"
								>
									Nombre completo
								</label>
								<input
									type="text"
									id="nombre"
									name="nombre"
									required
									class="w-full bg-transparent border-0 border-b-2 border-white/30 text-white placeholder-white/50 focus:outline-none focus:border-white pb-2 text-base font-family-HelveticaNeue transition-colors"
									placeholder="Ingresa tu nombre completo"
								/>
							</div>

							<!-- Campo Email -->
							<div>
								<label
									for="email"
									class="block text-white text-sm font-medium mb-2 font-family-HelveticaNeue"
								>
									Email
								</label>
								<input
									type="email"
									id="email"
									name="email"
									required
									class="w-full bg-transparent border-0 border-b-2 border-white/30 text-white placeholder-white/50 focus:outline-none focus:border-white pb-2 text-base font-family-HelveticaNeue transition-colors"
									placeholder="tu@email.com"
								/>
							</div>

							<!-- Campo Teléfono -->
							<div>
								<label
									for="telefono"
									class="block text-white text-sm font-medium mb-2 font-family-HelveticaNeue"
								>
									Teléfono
								</label>
								<input
									type="tel"
									id="telefono"
									name="telefono"
									required
									class="w-full bg-transparent border-0 border-b-2 border-white/30 text-white placeholder-white/50 focus:outline-none focus:border-white pb-2 text-base font-family-HelveticaNeue transition-colors"
									placeholder="+52 55 1234 5678"
								/>
							</div>

							<!-- Campo Mensaje -->
							<div>
								<label
									for="mensaje"
									class="block text-white text-sm font-medium mb-2 font-family-HelveticaNeue"
								>
									Mensaje
								</label>
								<textarea
									id="mensaje"
									name="mensaje"
									rows="5"
									required
									class="w-full bg-transparent border-0 border-b-2 border-white/30 text-white placeholder-white/50 focus:outline-none focus:border-white pb-2 text-base resize-none font-family-HelveticaNeue transition-colors"
									placeholder="Describe tu consulta o especifica la información del producto que necesitas..."
								></textarea>
							</div>

							<!-- Botón Enviar -->
							<button
								type="submit"
								class="w-full md:w-auto bg-[#05192d] text-white px-8 py-4 rounded-full text-base font-medium hover:bg-[#0a2540] transition-all duration-300 flex items-center justify-center gap-3 font-family-HelveticaNeue border-2 border-white"
							>
								Enviar
								<svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									xmlns="http://www.w3.org/2000/svg"
									class="text-white"
								>
									<path
										d="M5 12H19M19 12L12 5M19 12L12 19"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
									></path>
								</svg>
							</button>
						</form>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
