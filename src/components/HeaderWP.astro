---
// import "../styles/global.css";
---

<header class="w-full h-[60px] bg-[#23282d] text-white  top-0 left-0 z-50 shadow-md ">
	<nav class="flex items-center justify-between h-full px-3 md:px-4">
		<!-- Left: Menu toggle and logo -->
		<div class="flex items-center gap-2 md:gap-4">
			<button
				id="menu-toggle"
				class="w-10 h-10 text-white hover:bg-[#32373c] rounded p-2 transition-colors cursor-pointer shrink-0 block md:hidden z-10"
				aria-label="Toggle menu"
			>
				<svg
					width="20"
					height="20"
					viewBox="0 0 24 24"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
				>
					<path
						d="M3 18H21M3 12H21M3 6H21"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					></path>
				</svg>
			</button>
			<h1 class="text-base md:text-lg font-semibold font-family-HelveticaNeue whitespace-nowrap">
				Voltiak CMS
			</h1>
		</div>

		<!-- Right: User menu and actions -->
		<div class="flex items-center gap-2 md:gap-4">
			<!-- View site link -->
			<a
				href="/"
				target="_blank"
				class="text-xs md:text-sm text-[#b4b9be] hover:text-white transition-colors font-family-HelveticaNeue whitespace-nowrap"
			>
				Ver sitio
			</a>

			<!-- User dropdown placeholder -->
			<div class="flex items-center gap-1 md:gap-2 cursor-pointer hover:bg-[#32373c] rounded px-2 md:px-3 py-1.5 md:py-2 transition-colors">
				<div class="w-7 h-7 md:w-8 md:h-8 bg-[#2271b1] rounded-full flex items-center justify-center shrink-0">
					<span class="text-xs md:text-sm font-semibold text-white font-family-HelveticaNeue">
						A
					</span>
				</div>
				<span class="text-xs md:text-sm text-white font-family-HelveticaNeue hidden md:block">
					Admin
				</span>
			</div>
		</div>
	</nav>
</header>