---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import Logo from "./Logo.astro";
import MobileMenu from "./MobileMenu.tsx";
---

<header
	class=""
>
	<section class="w-full md:w-full mx-auto md:h-[150px] md:py-[24.9px] ph-21 shadow-[0_3px_6px_0_rgba(0,0,0,0.08)] bg-white fixed top-0 left-0 z-30">
		<nav class="flex items-center justify-between px-4 md:px-21">
			<div class="flex items-center justify-between md:hidden">
				<!-- Sandwich menu -->
				<button
					id="mobile-menu-toggle"
					class="w-10 h-10 text-black border-0 outline-none p-0 m-0 cursor-pointer relative"
				>
					<svg
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						xmlns="http://www.w3.org/2000/svg"
						class="absolute inset-0"
					>
						<!-- Icono hamburguesa -->
						<path
							data-hamburger
							d="M3 18H21M3 12H21M3 6H21"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						></path>
						<!-- Icono X (oculto por defecto) -->
						<path
							data-close
							d="M18 6L6 18M6 6L18 18"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							style="display: none;"
						></path>
					</svg>
				</button>
				<button class="w-10 h-10 text-black border-0 outline-none p-0 m-0 cursor-pointer color-transparent">
					<span class="text-[28px] font-bold  font-family-HelveticaNeue text-transparent">V</span>
				</button>
			</div>
			<div class="m-0">
				<Logo />
			</div>
			<div class="internal-links hidden md:flex gap-8 ">
				<HeaderLink
					href="/store"
					class="text-[17px]  text-center text-[#011122] font-family-HelveticaNeue font-weight-medium mb-19.1 mt-2"
					>Tienda</HeaderLink
				>
				<HeaderLink
					href="/about"
					class="text-[17px]  text-center text-[#011122] font-family-HelveticaNeue font-weight-medium mb-19.1 mt-2"
					>Nuestra Compañía</HeaderLink
				>
				<HeaderLink
					href="/blog"
					class="text-[17px]  text-center text-[#011122] font-family-HelveticaNeue font-weight-medium mb-19.1 mt-2"
					>Blog</HeaderLink
				>
				<HeaderLink
					href="/contact"
					class="text-[17px]  text-center text-[#011122] font-family-HelveticaNeue font-weight-medium mb-19.1 mt-2"
					>Contacto</HeaderLink
				>
			</div>
			<div class="social-links flex max-w-[60px] md:max-w-[100px] justify-center items-center gap-4 md:gap-12">
				<!-- Lupa de buscar -->
				<button
					class="w-10 h-10 text-black border-0 outline-none p-0  m-0 cursor-pointer"
				>
					<svg
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							d="M21 21L16.65 16.65M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"></path>
					</svg>
				</button>
				<!-- bolsa de compras -->
	
				<HeaderLink
					href="/cart"
					class="w-12 h-12 flex items-center justify-center border-0 outline-none p-0 m-0 cursor-pointer"
				>
					<svg
						width="48"
						height="48"
						viewBox="0 0 48 48"
						fill="none"
						xmlns="http://www.w3.org/2000/svg"
					>
						<!-- Círculo de fondo azul oscuro centrado -->
						<circle cx="24" cy="24" r="24" fill="#05192d"></circle>
						<!-- Icono de bolsa de compras centrado -->
						<g transform="translate(12, 12)">
							<path
								d="M3.74181 20.5545C4.94143 22 7.17414 22 11.6395 22H12.3607C16.8261 22 19.0589 22 20.2585 20.5545M3.74181 20.5545C2.54219 19.1091 2.95365 16.9146 3.77657 12.5257C4.36179 9.40452 4.65441 7.84393 5.7653 6.92196M3.74181 20.5545C3.74181 20.5545 3.74181 20.5545 3.74181 20.5545ZM20.2585 20.5545C21.4581 19.1091 21.0466 16.9146 20.2237 12.5257C19.6385 9.40452 19.3459 7.84393 18.235 6.92196M20.2585 20.5545C20.2585 20.5545 20.2585 20.5545 20.2585 20.5545ZM18.235 6.92196C17.1241 6 15.5363 6 12.3607 6H11.6395C8.46398 6 6.8762 6 5.7653 6.92196M18.235 6.92196C18.235 6.92196 18.235 6.92196 18.235 6.92196ZM5.7653 6.92196C5.7653 6.92196 5.7653 6.92196 5.7653 6.92196Z"
								stroke="#fff"
								stroke-width="2.5"
								fill="none"></path>
							<path
								d="M9 6V5C9 3.34315 10.3431 2 12 2C13.6569 2 15 3.34315 15 5V6"
								stroke="#fff"
								stroke-width="2.5"
								stroke-linecap="round"
								fill="none"></path>
						</g>
					</svg>
				</HeaderLink>
			</div>
		</nav>
	</section>
	<MobileMenu client:load />
</header>
